{
	"name": "vsxtask",
	"displayName": "VSXTask",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsxtask.Welcome",
		"onCommand:vsxtask.Pathing",
		"onCommand:vsxtask.webPanel",
		"onCommand:markdown.test"
	],
	
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsxtask.Welcome",
				"title": "Welcome"
			},
			{
				"command": "vsxtask.Pathing",
				"title": "URI Path"
			},
			{
				"command": "markdown.test",
        		"title": "Create new Kendo project..."
			}
		],
		"menus": {
			"explorer/context": [
			  {
				  "when": "isWindows",
				  "command": "markdown.test",
				  "group": "navigation"
				}
			]
		  }
	},

	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
